<?xml version="1.0" encoding="UTF-8"?>
<template>
    <!-- Submenu -->
    <other include="submenus">
        <!-- property menu item -->
        <property name="id" tag="mainmenuid" />
        <property name="submenu" tag="property" attribute="name|submenuVisibility"/>
        <controls>
            <control type="group">
                <skinshortcuts>visibility</skinshortcuts>
                <include content="HomeSubMenuCommonAnimation">
                    <param name="list_id" value="$PYTHON[9100+int($SKINSHORTCUTS[id])]" />
                </include>
                <control type="list" id="$PYTHON[9100+int($SKINSHORTCUTS[id])]">
                    <include>HomeSubMenuCommonValues</include>
                    <onleft>$PYTHON[9100+int($SKINSHORTCUTS[id])]</onleft>
                    <onright>$PYTHON[9100+int($SKINSHORTCUTS[id])]</onright>
                    <include>HomeSubMenuCommonLayout</include>
                    <content>
                        <include>skinshortcuts-group-$SKINSHORTCUTS[submenu]</include>
                    </content>
                </control>
                <include content="HomeSubMenuCommonControls">
                    <param name="list_id" value="$PYTHON[9100+int($SKINSHORTCUTS[id])]" />
                </include>
            </control>
        </controls>
    </other>
    <!-- Addons -->
    <other include="addons">
        <!-- property menu item -->
        <property name="id" tag="mainmenuid" />
        <property name="submenu" tag="property" attribute="name|submenuVisibility"/>
        <controls>
            <control type="list" id="$PYTHON[700+int($SKINSHORTCUTS[id])]">
                <include content="HomeAddonsCommonAnimation">
                    <param name="list_id" value="$PYTHON[700+int($SKINSHORTCUTS[id])]" />
                </include>
                <skinshortcuts>visibility</skinshortcuts>
                <visible>!Skin.HasSetting(LowerMenu) | !Player.HasMedia | Skin.HasSetting(HomePageVideoInfo) | Skin.HasSetting(HomePageMusicInfo)</visible>
                <onleft>$PYTHON[700+int($SKINSHORTCUTS[id])]</onleft>
                <onright>$PYTHON[700+int($SKINSHORTCUTS[id])]</onright>
                <include>HomeAddonUpDown</include>
                <include>HomeAddonsCommonLayout</include>
                <content>
                    <include>skinshortcuts-group-$SKINSHORTCUTS[submenu]-1</include>
                </content>
            </control>
            <control type="list" id="$PYTHON[700+int($SKINSHORTCUTS[id])]">
                <include content="HomeAddonsCommonAnimationMediaPlaying">
                    <param name="list_id" value="$PYTHON[700+int($SKINSHORTCUTS[id])]" />
                </include>
                <skinshortcuts>visibility</skinshortcuts>
                <visible>Skin.HasSetting(LowerMenu) + Player.HasMedia + ![Skin.HasSetting(HomePageVideoInfo) | Skin.HasSetting(HomePageMusicInfo)]</visible>
                <onleft>$PYTHON[700+int($SKINSHORTCUTS[id])]</onleft>
                <onright>$PYTHON[700+int($SKINSHORTCUTS[id])]</onright>
                <include>HomeAddonUpDown</include>
                <include>HomeAddonsCommonLayoutMediaPlaying</include>
                <content>
                    <include>skinshortcuts-group-$SKINSHORTCUTS[submenu]-1</include>
                </content>
            </control>
        </controls>        
    </other>
    <!-- Widgets -->
    <other include="widgets">
        <!-- property menu item -->
        <property name="id" tag="mainmenuid" />
        <property name="submenu" tag="property" attribute="name|submenuVisibility"/>
        <!-- property menu item widget -->
        <property name="widget" tag="property" attribute="name|widget" />
        <property name="widget">None</property>
        <property name="widget_name" tag="property" attribute="name|widgetName" />
        <property name="widget_patch" tag="property" attribute="name|widgetPath" />
        <property name="widget_target" tag="property" attribute="name|widgetTarget" />
        <!-- widget type 1 -->
        <property name="widget_type" tag="property" attribute="name|widgetType" value="weather">Weather</property>
        <property name="widget_type" tag="property" attribute="name|widgetType" value="weatherh36">WeatherH36</property>        
        <property name="widget_type" tag="property" attribute="name|widgetType" value="addon">Addons</property>
        <property name="widget_type" tag="property" attribute="name|widgetType" value="pvrchannel">PVRChannels</property>
		<property name="widget_type" tag="property" attribute="name|widgetType" value="custpvrchannel">PVRChannelsCustom</property>
		<property name="widget_type" tag="property" attribute="name|widgetType" value="pvrrecording">PVRRecordings</property>
        <property name="widget_type" tag="property" attribute="name|widgetType" value="playlist">Playlists</property>
        <property name="widget_type" tag="property" attribute="name|widgetType" value="movies">Movies</property>
        <property name="widget_type" tag="property" attribute="name|widgetType" value="tvshows">TVShows</property>
        <property name="widget_type" tag="property" attribute="name|widgetType" value="episodes">Episodes</property>
        <property name="widget_type" tag="property" attribute="name|widgetType" value="musicvideos">MusicVideos</property>
        <property name="widget_type" tag="property" attribute="name|widgetType" value="albums">Albums</property>
        <property name="widget_type" tag="property" attribute="name|widgetType" value="artists">Artists</property>
        <property name="widget_type" tag="property" attribute="name|widgetType" value="songs">Songs</property>
        <property name="widget_type" tag="property" attribute="name|widgetType" value="mixed">Mixed</property>
        <property name="widget_type" tag="property" attribute="name|widgetType" value="favourites">Favourites</property>
        <property name="widget_type">Other</property>
        <controls>
            <include content="include-Widgets-$SKINSHORTCUTS[widget_type]">
                <param name="submenu" value="$SKINSHORTCUTS[submenu]" />
                <param name="visible" value="String.IsEqual(Container(9000).ListItem.Property(submenuVisibility),$SKINSHORTCUTS[submenu])" />
                <param name="list_id" value="$PYTHON[8100+int($SKINSHORTCUTS[id])]" />
                <param name="widget" value="$SKINSHORTCUTS[widget]" />
                <param name="widget_name" value="$SKINSHORTCUTS[widget_name]" />
                <param name="widget_target" value="$SKINSHORTCUTS[widget_target]" />
                <param name="widget_patch" value="$SKINSHORTCUTS[widget_patch]" />                
            </include>
        </controls>
    </other>
</template>