	<include name="CommonCustomBackground">
		<control type="group">
			<visible>!Window.IsVisible(Home) + Skin.HasSetting(SeparateBackground)</visible>
			<control type="multiimage" id="90002">
				<description>User Separate Background Image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<imagepath background="true">$INFO[Window(Home).Property(MenuBackground)]</imagepath>
				<timeperimage>10000</timeperimage>
				<randomize>true</randomize>
				<fadetime>1000</fadetime>
				<visible>String.IsEmpty(Skin.String(HomeFanart.path)) | String.IsEmpty(Control.GetLabel(90003))</visible>
			</control>
			<control type="multiimage" id="90003">
