<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="CommonBackground">
		<control type="image">
			<depth>DepthBackground</depth>
			<description>Normal Default Background Image</description>
			<include>BackgroundDimensions</include>
			<aspectratio>scale</aspectratio>
			<texture fallback="special://skin/extras/default/SKINDEFAULT.jpg">$INFO[Skin.CurrentTheme,special://skin/extras/themes/,.jpg]</texture>
			<visible>![Skin.HasSetting(UseCustomBackground) + !String.IsEmpty(Skin.String(CustomBackgroundPath))]</visible>
			<include>VisibleFadeEffect</include>
			<visible>!Skin.HasSetting(SeparateBackground)</visible>
		</control>
		<control type="image">
			<depth>DepthBackground</depth>
			<description>User Set Background Image</description>
			<include>BackgroundDimensions</include>
			<aspectratio>scale</aspectratio>
			<texture>$INFO[Skin.String(CustomBackgroundPath)]</texture>
			<visible>Skin.HasSetting(UseCustomBackground) + !String.IsEmpty(Skin.String(CustomBackgroundPath))</visible>
			<include>VisibleFadeEffect</include>
			<visible>!Skin.HasSetting(SeparateBackground)</visible>
		</control>
		<control type="group">
			<visible>Window.IsVisible(Home) + Skin.HasSetting(SeparateBackground)</visible>
			<control type="multiimage" id="90000">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<imagepath background="true">$VAR[HomeBackground]</imagepath>
				<timeperimage>10000</timeperimage>
				<randomize>true</randomize>
				<fadetime>1000</fadetime>
				<include>VisibleFadeEffect</include>
				<visible>String.IsEmpty(Skin.String(HomeFanart.path)) | String.IsEmpty(Control.GetLabel(90001))</visible>
			</control>
			<control type="multiimage" id="90001">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
