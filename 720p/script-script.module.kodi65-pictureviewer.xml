<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">5000</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control type="image">
			<left>-100</left>
			<top>-100</top>
			<width>1400</width>
			<height>1000</height>
			<texture>HomeSubNF.png</texture>
		</control>
		<control type="image">
			<left>-100</left>
			<top>-100</top>
			<width>1400</width>
			<height>1000</height>
			<texture>HomeSubNF.png</texture>
		</control>
		<control type="list" id="5000">
			<left>-58</left>
			<top>0</top>
			<width>1400</width>
			<height>720</height>
			<onleft>5000</onleft>
			<onright>5000</onright>
			<ondown>9001</ondown>
			<animation effect="fade" start="0" end="100" time="300" tween="sine">WindowOpen</animation>
			<animation effect="fade" end="100" time="200" tween="sine">WindowClose</animation>
			<scrolltime tween="sine">400</scrolltime>
			<orientation>Horizontal</orientation>
			<itemlayout height="720" width="1280">
				<control type="image">
					<left>58</left>
					<top>0</top>
					<width>1280</width>
					<height>720</height>
					<aspectratio>keep</aspectratio>
					<fadetime>200</fadetime>
					<texture>$INFO[ListItem.Art(original)]</texture>
				</control>
			</itemlayout>
			<focusedlayout height="720" width="1280">
				<control type="image">
					<left>58</left>
					<top>0</top>
					<width>1280</width>
					<height>720</height>
					<aspectratio>keep</aspectratio>
					<fadetime>200</fadetime>
					<texture>$INFO[ListItem.Art(original)]</texture>
				</control>
			</focusedlayout>
		</control>
	</controls>
</window>
