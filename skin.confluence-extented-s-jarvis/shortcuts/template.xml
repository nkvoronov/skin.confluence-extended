<?xml version="1.0" encoding="UTF-8"?>
<template>
    <other include="submenus">
        <property name="id" tag="mainmenuid" />
        <property name="id_label" tag="property" attribute="name|labelID"/>
        <controls>
            <control type="group">
                <skinshortcuts>visibility</skinshortcuts>
                <include name="HomeSubMenuCommonAnimation">
                    <param name="list_id" value="$PYTHON[9100+int($SKINSHORTCUTS[id])]" />
                </include>
                <control type="list" id="$PYTHON[9100+int($SKINSHORTCUTS[id])]">
                    <include>HomeSubMenuCommonValues</include>
                    <onleft>$PYTHON[9100+int($SKINSHORTCUTS[id])]</onleft>
                    <onright>$PYTHON[9100+int($SKINSHORTCUTS[id])]</onright>
                    <include>HomeSubMenuCommonLayout</include>
                    <content>
                        <include>skinshortcuts-group-num-$SKINSHORTCUTS[id_label]</include>
                    </content>
                </control>
                <include name="HomeSubMenuCommonControls">
                    <param name="list_id" value="$PYTHON[9100+int($SKINSHORTCUTS[id])]" />
                </include>
            </control>
        </controls>
    </other>
    <other include="subaddons">
        <property name="id" tag="mainmenuid" />
        <property name="id_label" tag="property" attribute="name|labelID"/>
        <controls>
            <control type="list" id="$PYTHON[700+int($SKINSHORTCUTS[id])]">
                <include name="HomeAddonsCommonAnimation">
                    <param name="list_id" value="$PYTHON[700+int($SKINSHORTCUTS[id])]" />
                </include>
                <skinshortcuts>visibility</skinshortcuts>
                <visible>!Skin.HasSetting(LowerMenu) | !Player.HasMedia | Skin.HasSetting(HomePageVideoInfo) | Skin.HasSetting(HomePageMusicInfo)</visible>
                <onleft>$PYTHON[700+int($SKINSHORTCUTS[id])]</onleft>
                <onright>$PYTHON[700+int($SKINSHORTCUTS[id])]</onright>
                <include>HomeAddonUpDown</include>
                <include>HomeAddonsCommonLayout</include>
                <content>
                    <include>skinshortcuts-group-num-$SKINSHORTCUTS[id_label]-1</include>
                </content>
            </control>
            <control type="list" id="$PYTHON[700+int($SKINSHORTCUTS[id])]">
                <include name="HomeAddonsCommonAnimationMediaPlaying">
                    <param name="list_id" value="$PYTHON[700+int($SKINSHORTCUTS[id])]" />
                </include>
                <skinshortcuts>visibility</skinshortcuts>
                <visible>Skin.HasSetting(LowerMenu) + Player.HasMedia + ![Skin.HasSetting(HomePageVideoInfo) | Skin.HasSetting(HomePageMusicInfo)]</visible>
                <onleft>$PYTHON[700+int($SKINSHORTCUTS[id])]</onleft>
                <onright>$PYTHON[700+int($SKINSHORTCUTS[id])]</onright>
                <include>HomeAddonUpDown</include>
                <include>HomeAddonsCommonLayoutMediaPlaying</include>
                <content>
                    <include>skinshortcuts-group-num-$SKINSHORTCUTS[id_label]-1</include>
                </content>
            </control>
        </controls>        
    </other>
    <other include="custom-widgets">
        <property name="id" tag="mainmenuid" />
        <property name="id_label" tag="property" attribute="name|labelID"/>
        <controls>
            <include name="CommonWidgetInclude">
                <param name="left_widget" value="140" />
                <param name="visible_widget" value="StringCompare(Container(9000).ListItem.Property(widgetTarget),submenus)" />
                <param name="visible_widget2" value="StringCompare(Container(9000).ListItem.Property(submenuVisibility),num-$SKINSHORTCUTS[id_label])" />
                <param name="label_title" value="$INFO[Container(9000).ListItem.Property(widgetName)]" />
                <param name="list_id" value="$PYTHON[8100+int($SKINSHORTCUTS[id])]" />
                <param name="animation_name_include" value="AnimationWidgetCommon" />
                <param name="item_layout_name_include" value="FavouritesWidgetItemsLayout" />
                <param name="width_widget" value="1000" />
                <param name="width_widget_item" value="200" />
                <param name="left_widget_ra" value="1010" />                
                <param name="contents_name_include" value="skinshortcuts-group-num-$SKINSHORTCUTS[id_label]-2" />
            </include>
        </controls>
    </other>
</template>